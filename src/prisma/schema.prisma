generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique(map: "email_1")
  username String @unique(map: "username_1")
  password String

  roles     role[]   @default([USER])
  blockedBy String[] @default([])

  firstName   String?
  lastName    String?
  dayOfBirth  Int?
  phoneNumber String? @unique(map: "phoneNumber_1")

  rooms   room[]   @relation(fields: [roomsId], references: [id])
  roomsId String[] @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum role {
  ADMIN
  MODERATOR
  USER
}

model room {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  room_id String @unique

  membersCount Int
  members      user[]   @relation(fields: [memberId], references: [id])
  memberId     String[] @db.ObjectId

  messages message[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model message {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  senderId    String @db.ObjectId
  recipientId String @db.ObjectId
  content     String @default("")
  status      status @default(SENT)

  room   room   @relation(fields: [roomId], references: [id])
  roomId String @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum status {
  UNSEEN
  SEEN
  SENT
}
