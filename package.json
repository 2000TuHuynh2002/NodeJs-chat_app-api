{
  "name": "nodejs-api_chat_app",
  "version": "1.0.0",
  "description": "chat app project (NodeJs + Typescript)",
  "main": "src/app.ts",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "prod": "npx ts-node --transpile-only src/app.ts",
    "prisma:generate": "prisma generate --schema src/prisma/schema.prisma",
    "prisma:migrate": "prisma db push --schema src/prisma/schema.prisma",
    "prisma:seed": "ts-node src/prisma/seed.ts",
    "prisma:format": "prisma format --schema src/prisma/schema.prisma"
  },
  "author": "tuhuynh",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.7.0",
    "socket.io": "^4.8.0",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.0",
    "@types/validator": "^13.12.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.7",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
